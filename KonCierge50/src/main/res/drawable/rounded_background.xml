<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2C2C2C" /> <!-- Dark color (adjust as needed) -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- White outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White outline -->
        </shape>
    </item>
</layer-list>